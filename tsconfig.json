{
  "compilerOptions": {
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ESNext", "DOM"],
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react",
    "noImplicitThis": true,
    "outDir": "./dist/",
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext",
    "types": ["@types/jest", "@types/node"]
  },
  "include": ["src", "scripts"],
  "exclude": ["node_modules", "src/test/luaIntegration"]
}
