{
  "name": "basic-pragma",
  "version": "4.0.0",
  "description": "Configurable JSX pragma using a basic vdom",
  "author": "verit",
  "license": "MIT",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "dev": "tsc --project tsconfig.build.json --watch",
    "prepublishOnly": "rm -rf dist & npm run build",
    "lint": "deno fmt . --ignore=package.json,package-lock.json",
    "test-lint": "deno lint . --ignore=node_modules,dist",
    "test": "jest"
  },
  "keywords": [
    "dom",
    "jsx",
    "pragma",
    "preact",
    "React",
    "ts",
    "tstl",
    "tsx",
    "typescript-to-lua",
    "typescript",
    "ui"
  ],
  "devDependencies": {
    "@babel/preset-env": "^7.18.10",
    "@babel/preset-typescript": "^7.18.6",
    "@types/jest": "^26.0.14",
    "jest": "^28.1.3",
    "ts-jest": "^28.0.7",
    "typescript": "^4.7.4"
  },
  "files": [
    "dist/",
    "src/"
  ],
  "repository": {
    "type": "git",
    "url": "github:voces/basic-pragma"
  }
}
